<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@android:color/black">

   <!-- NestedScrollView to make the content scrollable -->
   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <!-- LinearLayout for stacking the cards vertically -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingBottom="16dp">

         <!-- Breakfast Card -->
         <androidx.cardview.widget.CardView
             android:id="@+id/breakfast_card"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="16dp"
             app:cardCornerRadius="8dp"
             android:padding="16dp"
             android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/green"
                android:gravity="center_vertical">

               <!-- Breakfast Icon -->
               <ImageView
                   android:id="@+id/breakfast_icon"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/dinner"
                   android:contentDescription="Breakfast Icon" />

               <!-- Breakfast Text -->
               <TextView
                   android:id="@+id/breakfast_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                   android:text="Breakfast"
                   android:textColor="@color/black"
                   android:textSize="18sp"
                   android:textStyle="bold" />
            </LinearLayout>
         </androidx.cardview.widget.CardView>

         <!-- Lunch Card -->
         <androidx.cardview.widget.CardView
             android:id="@+id/lunch_card"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="16dp"
             app:cardCornerRadius="8dp"
             android:padding="16dp"
             android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/green"
                android:gravity="center_vertical">

               <!-- Lunch Icon -->
               <ImageView
                   android:id="@+id/lunch_icon"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/lunch"
                   android:contentDescription="Lunch Icon" />

               <!-- Lunch Text -->
               <TextView
                   android:id="@+id/lunch_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                   android:text="Lunch"
                   android:textColor="@color/black"
                   android:textSize="18sp"
                   android:textStyle="bold" />
            </LinearLayout>
         </androidx.cardview.widget.CardView>

         <!-- Dinner Card -->
         <androidx.cardview.widget.CardView
             android:id="@+id/dinner_card"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="16dp"
             app:cardCornerRadius="8dp"
             android:padding="16dp"
             android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/green"
                android:gravity="center_vertical">

               <!-- Dinner Icon -->
               <ImageView
                   android:id="@+id/dinner_icon"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/breakfast"
                   android:contentDescription="Dinner Icon" />

               <!-- Dinner Text -->
               <TextView
                   android:id="@+id/dinner_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                   android:text="Dinner"
                   android:textColor="@color/black"
                   android:textSize="18sp"
                   android:textStyle="bold" />
            </LinearLayout>
         </androidx.cardview.widget.CardView>



      </LinearLayout>
   </androidx.core.widget.NestedScrollView>

</androidx.wear.widget.BoxInsetLayout>

